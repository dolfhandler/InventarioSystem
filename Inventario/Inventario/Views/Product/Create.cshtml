@using System.Web;
@{
    var title = "Crear producto";
    var categories = ViewBag.categories != null ? (ViewBag.categories as List<CategoryModel>) : new List<CategoryModel>();
}

<h1>@title</h1>

<form action="/Product/Create" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="">Descripción</label>
            <input type="text" class="form-control" name="description" placeholder="Descripción del producto">
        </div>
        <div class="form-group col-md-4">
            @if (categories.Count > 0) {
            <label for="">Seleccione una categoria</label>
            <select class="form-control  form-control-chosen" name="category"
                    data-live-search="true"
                    data-placeholder="Selecciona una categoria...">
                <option value="">Selecciona una categoria...</option>
                @foreach(var category in categories) {
                    <option value="@category.id">@HttpUtility.HtmlDecode(category.description)</option>
                }
            </select>
            } else {
                <div class="text-warning">No se ha creado ninguna categoria</div>
                <a href="/Category/Create">Crear una categoria</a>
            }
        </div>
        <div class="form-group col-md-4 align-items-center">
            <label for="">Foto</label>
            <input type="file" class="form-control-file" name="photo" placeholder="Seleccione un archivo">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="">Código del producto</label>
            <input type="text" class="form-control" name="code" placeholder="Código del producto">
        </div>
        <div class="form-group col-md-4">
            <label for="">Precio de compra</label>
            <input type="number" class="form-control" name="purchasePrice" placeholder="0">
        </div>
        <div class="form-group col-md-4">
            <label for="">Precio de venta</label>
            <input type="number" class="form-control" name="salePrice" placeholder="0">
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Guardar</button>
        <a href="/Product/Products" class="btn btn-danger">Cancelar</a>
    </div>
</form>
